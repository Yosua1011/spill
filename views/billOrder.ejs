<!DOCTYPE html>
<html>
    <%- include partial/head %>
  <body>
    <br>
    <a href="/" style="margin-left: 20px">Back To Home</a><br><br>
    <a href="/add" style="margin-left: 20px">Add Bill</a><br><br>
    <div style="margin-left: 20px">
      <table>
        <%data.forEach(row => {%>
        <form action="/<%=row.dataValues.totalPayment%>/sendMail/<%=row.dataValues.PayeeId%>">
        <tr>Total Cost: Rp   </tr>
        <tr> <%=row.dataValues.totalPayment%> </tr>
        <select name="payAmount" style="visibility: hidden">
            <option value="<%=row.dataValues.totalPayment%>">satu</option>
        </select>
        <tr>    Payee: </tr>
        <tr> <%=row.PayeeId%> </tr>
        <select name="payeeId" style="visibility: hidden">
            <option value="<%=row.dataValues.PayeeId%>">satu</option>
        </select>
        <tr><input type="submit" value="Submit"></tr><br><br>
        </form>
        <%})%>
      </table>
    </div>
  </body>
</html>
